---
const { translateStrings } = Astro.props;
---

<section class='card-global w-full'>
  <h2 class='card-title mb-6'>{translateStrings('languages.title')}</h2>

  <div class='flex flex-col justify-center items-center gap-3'>
    <div class='card-item w-60'>
      <img
        src='/argentina.svg'
        alt='Argentina'
        width='30'
      />
      <p class='text-lg'>{translateStrings('languages.es')}</p>
    </div>
    <div class='card-item w-60'>
      <img
        src='/usa.svg'
        alt='USA'
        width='30'
      />
      <p class='text-lg'>{translateStrings('languages.en')}</p>
    </div>
  </div>
</section>

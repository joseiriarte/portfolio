---
import AboutMeSection from './AboutMeSection.astro';
import CertificationsSection from './CertificationsSection.astro';
import Footer from './Footer.astro';
import LanguagesSection from './LanguagesSection.astro';
import ProfileSection from './ProfileSection.astro';
import ProjectsSection from './ProjectsSection.astro';
import SkillsSection from './SkillsSection.astro';

const { translateStrings } = Astro.props;
---

<section class='max-w-4xl max-lg:w-[95%] flex flex-col justify-center items-center gap-6 mt-36'>
  <ProfileSection translateStrings={translateStrings} />
  <ProjectsSection translateStrings={translateStrings} />
  <SkillsSection translateStrings={translateStrings} />
  <AboutMeSection translateStrings={translateStrings} />
  <LanguagesSection translateStrings={translateStrings} />
  <CertificationsSection translateStrings={translateStrings} />
  <Footer translateStrings={translateStrings} />
</section>
